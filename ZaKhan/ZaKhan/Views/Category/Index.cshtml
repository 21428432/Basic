@model IEnumerable<ZaKhan.Model.ProdCategoryView>

@{
    ViewBag.Title = "Categories";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<div class="panel panel-default">
    <div class="panel-heading" align="center">
        <h2>All Categories</h2>
    </div>
    <div class="panel-body">
        @Html.ActionLink("New Category", "Create", null, new { @class = "btn btn-primary btn-sm" })
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-left">Category Name</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.CategoryName</td>

                    <td>
                        <div align="right">
                            @Html.ActionLink("Edit", "Update", new {id = item.CategoryId}, new {@class = "btn btn-warning"})
                            @Html.ActionLink("Details", "Details", new {id = item.CategoryId}, new {@class = "btn btn-primary"})
                            @Html.ActionLink("Delete", "Delete", new {id = item.CategoryId}, new {@class = "btn btn-danger"})
                        </div>
                    </td>
                </tr>
            }
        </table>
        @Html.ActionLink("Cancel and return to List", "Admin", "Login", null, new
                    {
                        @class = "btn btn-success"
                    })
    </div>
</div>
