<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ZA KHAN Optometrist</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/jqueryui")

   

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <b><b><i><a class="navbar-brand page-scroll" href="">ZA KHAN</a></i></b></b>
           @* @Html.ActionLink("ZA KHAN", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})*@
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (User.IsInRole("Admin").Equals(true))
                {
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>&nbsp;</li>
                    <li>&nbsp;</li>
                    <li>&nbsp;</li>
                    <li>&nbsp;</li>
                    <li>@Html.ActionLink("Dashboard", "Admin", "Login")</li>


                }

                else if (User.Identity.IsAuthenticated.Equals(true))
                {
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Store Locator", "Index", "StoreLocation")</li>
                    <li>@Html.ActionLink("My Account", "MyAccount", "PatientUpdate")</li>
                    <li></li>
                    <li>@Html.ActionLink("Products", "CustomerIndex", "Product")</li>
                    <li>@Html.ActionLink("Cart", "MyCart", "ShoppingCart")</li>
                    <li>@Html.ActionLink("My Orders", "MyOrders", "Order")</li>
                    <li>@Html.ActionLink("Book Consultation", "Bookings", "Booking")</li>

                }
                else
                {
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li></li>
                    <li></li>
                    <li></li>
                    
                    <li>@Html.ActionLink("Products", "CustomerIndex", "Product")</li>
                    <li>@Html.ActionLink("Store Locator", "Index", "StoreLocation")</li>
                    
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Default Constructors</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/jqueryui")

@RenderSection("scripts", required: false)
</body>
</html>
