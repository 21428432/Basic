@model IEnumerable<ZaKhan.Model.OptometristModel>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<div class="panel panel-default">
    <div class="panel-heading" align="center">
        <h2>Optometrists</h2>
    </div>
<div class="panel-body">
    @if (User.IsInRole("Admin").Equals(true))
    {
        <p>
            @Html.ActionLink("Create New", "Create", "", new {@class = "btn btn-primary"})
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptometristName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OptometristName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cell)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.OptometristId}, new {@class = "btn btn-primary"}) |
                    @Html.ActionLink("Details", "Details", new {id = item.OptometristId}, new {@class = "btn btn-success"}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.OptometristId}, new {@class = "btn btn-danger"})
                </td>
            </tr>
        }

    </table>
    @if (User.IsInRole("Admin").Equals(true))
    {
        @Html.ActionLink("Cancel and return to List", "Admin", "Login", null, new
    {
        @class = "btn btn-success"
    })
    }
</div>
</div>